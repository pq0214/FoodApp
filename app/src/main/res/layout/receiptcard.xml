<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/orderfoodimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/apple"
            android:padding="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:id="@+id/orderGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp">
                <TextView
                    android:id="@+id/txtordername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5sp"
                    android:textSize="16sp"
                    android:text="@string/exfood"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/txtordertotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="RM 00.00"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtorderqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderGroup"
                android:textSize="12sp"
                android:text="Quantity: 1"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:id="@+id/lastGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/txtorderqty">
                <TextView
                    android:id="@+id/txtordermode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="Dine In"
                    android:textColor="@color/black"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/txtorderstatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10sp"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="Preparing..."
                    android:textColor="@color/black"
                    android:gravity="end"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>